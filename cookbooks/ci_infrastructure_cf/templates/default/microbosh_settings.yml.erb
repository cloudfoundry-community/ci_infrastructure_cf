<% job = node['ci_infrastructure_cf']['jobs']['microbosh'] %>
---
provider:
  name: <%= job[:provider][:name] %>
  credentials:
    openstack_username: <%= job[:provider][:user]%>
    openstack_api_key: <%= job[:provider][:pass] %>
    openstack_tenant: <%= job[:provider][:tenant] %>
    openstack_auth_url: <%= job[:provider][:auth_url] %>
    openstack_region: ''
recursor: <%= job['recursor'] %>
options:
  boot_from_volume: false
address:
  subnet_id: <%= job[:address][:subnet_id] %>
  ip: <%= job[:address][:ip] %>
